{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "prettier"
    ],
    "rules": {
        "prettier/prettier":[ "error",{
            "endOfLine":"auto"
        }],
        "class-methods-use-this": "off", // para não usar o this obrigatoriamente
        "no-param-reassign":"off", //para que receba um parametro e o altere
        "camelcase":"off", //desligar o formato camelcase
        "no-unused-vars": ["error",{"argsIgnorePattern": "next"}], // para que possamos declarar a variável next mesmo sem utiliza-la
        "linebreak-style": 0
    }
}
